{
  "compileOnSave": false,
  "include": [
    "src/**/**.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "newLine": "crlf",
    "declaration": true,
    "removeComments": true,
    "isolatedModules": true,
    "emitDeclarationOnly": true,
    "allowUnreachableCode": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "Services/*": [ "src/Services/*" ],
      "MethodTypes/*": [ "src/MethodTypes/*" ]
    }
  }
}